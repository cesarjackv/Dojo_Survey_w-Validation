<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <title>Dojo Survey w/Validation</title>
</head>
<body>
    <div class="container text-center d-flex justify-content-center">
        @{
            ViewData["Title"] = "Home Page";
        }
        @model Survey;
        <fieldset class="card bg-light w-50 mt-5 px-5 pt-3">
            <legend><u>Submitted Info</u></legend><br>
            <span class="d-flex justify-content-between mx-5">
                <p>Name:</p>
                <p>@Model.Name</p>
            </span>
            <span class="d-flex justify-content-between mx-5">
                <p>Dojo Location:</p>
                <p>@Model.Location</p>
            </span>
            <span class="d-flex justify-content-between mx-5">
                <p>Favorite Language:</p>
                <p>@Model.Language</p>
            </span>
            <span class="d-flex justify-content-between mx-5">
                <p>Comment</p>
                <p>@Model.Message</p>
            </span>
            <a href="/" class="btn btn-primary w-25 mx-auto my-3">Go Back</a>
        </fieldset>
    </div>
</body>
</html>
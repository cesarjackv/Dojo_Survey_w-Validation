<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <title>Dojo Survey w/Validation</title>
</head>
<body>
    <div class="container text-center d-flex justify-content-center">
        @{
            ViewData["Title"] = "Home Page";
        }
        @model Survey;
        <form action="/Results" method="post" class="form-group card bg-light w-50 mt-5">
            <br>
            <span class="d-flex justify-content-evenly">
                <label for="Name" class="form-label">Your Name:</label>
                <input type="text" asp-for="Name" name="Name" id="Name" class="form-control w-50">
            </span>
            <span asp-validation-for="Name" class="text-danger"></span><br>
            <span class="d-flex justify-content-evenly">
                <label for="Location" class="form-label">Dojo Location:</label>
                <select class="form-control w-50" asp-for="Location" name="Location" id="Location">
                    <option value="">--select--</option>
                    <option value="San Jose">San Jose</option>
                    <option value="Burbank">Burbank</option>
                    <option value="Online">Online</option>
                    <option value="I Don't Know Where I am">Huh?</option>
                </select>
            </span>
            <span asp-validation-for="Location" class="text-danger"></span><br>
            <span class="d-flex justify-content-evenly">
                <label for="Language" class="form-label">Favorite Language:</label>
                <select class="form-control w-50" asp-for="Language" name="Language" id="Language">
                    <option value="">--select--</option>
                    <option value="Python">Python</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="Java">Java</option>
                    <option value="C#">C#</option>
                </select>
            </span>
            <span asp-validation-for="Language" class="text-danger"></span><br>
            <span class="d-flex justify-content-evenly">
                <label for="Message" class="form-label">Message:</label>
                <textarea asp-for="Message" name="Message" id="Message" cols="30" rows="10" class="form-control w-50"></textarea>
            </span>
            <span asp-validation-for="Message" class="text-danger"></span><br>
            <button type="submit" class="btn btn-primary w-25 justify-content-end my-1 mx-auto">Submit</button>
        </form>
    </div>
</body>
</html>
